Import('env')

from SCons.Util import CLVar

objects = env.SharedObject([
      'exception.cpp'
    , 'cl_error.cpp'
    , 'cl_error_no.cpp'
    , 'platform.cpp'
    , 'platforms.cpp'
    , 'platform_info.cpp'
    , 'platform_query.cpp'
    , 'device.cpp'
    , 'devices.cpp'
    , 'device_info.cpp'
    , 'device_query.cpp'
    , 'platform_layer.cpp'
    , 'platform_layer_info.cpp'
    , 'program.cpp'
    #, 'program_source.cpp'
    , 'context.cpp'
    , 'context_properties.cpp'
])

libs = env.get('LIBS', CLVar()) + [ 
      'dimbo_protobuf_cl'
    , 'boost_regex' 
#    , 'boost_serialization' 
    , 'OpenCL'
]

# rlib - "real" library
rlib = env.SharedLibrary('../../dimbo_cl', objects + ['real.cpp'], LIBS = libs)
env.Install('${libdir}', rlib)

# tlib - library for testing (OpenCL functions replaced with mocks)
tlib = env.SharedLibrary('../../dimbo_cl_test', objects + ['mock.cpp'], LIBS = libs)
env.Ignore('../..', tlib)


