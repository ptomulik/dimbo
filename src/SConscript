Import('env')

SConscript('SConscript.tools', exports = ['env'])
SConscript('SConscript.defaults', exports = ['env'])
SConscript('SConscript.cli', exports = ['env'] )
SConscript('SConscript.adjust', exports = ['env'])
if not env.GetOption('clean') and not env.GetOption('help'):
    conf = env.Configure(conf_dir = '.sconf_temp', log_file = 'config.log')
    SConscript('SConscript.conf', exports = ['conf'])
    env = conf.Finish()
SConscript('SConscript.adjust2', exports = ['env'])

# Code coverage support. The following is necessary to handle properly *.gcno
# and *.gcda files generated by gcc/clang. See README.rst for
# scons-tool-gcccov (https://github.com/ptomulik/scons-tool-gcccov).
env.GCovInjectObjectEmitters()

# Load subordinary sconscripts
subdirs = [ 'lib', 'app' ]
scripts = [ '%s/SConscript' % s for s in subdirs ]
SConscript( scripts, exports = ['env'] )

