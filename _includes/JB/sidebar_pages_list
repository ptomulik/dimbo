{% comment %}<!--
The sidebar_pages_list include is a listing helper.
Usage:
  1) assign the 'sidebar_pages_list' variable to a valid array of pages or posts.
  2) include JB/sidebar_pages_list
  example:
    <ul>
  	  {% assign sidebar_pages_list = site.pages %}  
  	  {% include JB/sidebar_pages_list %}
  	</ul>
  	
  Grouping: (optional): 
  	assign the 'sidenav' variable to constrain the list to only pages/posts
  	in the given sidenav. Note you must define the sidenav manually in the page/post
  	meta-data to use this feature.
  	
  This helper can be seen in use at: ../_layouts/default.html
-->{% endcomment %}

{% if site.JB.sidebar_pages_list.provider == "custom" %}
  {% include custom/sidebar_sidebar_pages_list %}
{% else %}
  {% for node in sidebar_pages_list %}
    {% if node.title != null %}
      {% if sidenav == null or sidenav == node.sidenav %}
      	{% if page.url == node.url %}
      	<li class="active"><a href="{{ BASE_PATH }}{{node.url}}" class="active">{{node.title}}</a></li>
      	{% else %}
      	<li><a href="{{ BASE_PATH }}{{node.url}}">{{node.title}}</a></li>
      	{% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
{% endif %}
{% assign sidebar_pages_list = nil %}
{% assign sidenav = nil %}
